
@model IEnumerable<IdentityRole>

<h3>Role list</h3>
<hr />
<div class="row m-0">
    <div class="col-md-12">
        <a href="/admin/CreateRole" class="btn btn-primary">Create Role</a>
        <div class="row">
            <table class="table table-bordered mt-3">
                <thead>
                    <tr>
                        <th style="width:350px">Role Id</th>
                        <th> Role Name</th>
                        <th style="width:130px"></th>
                    </tr>
                </thead>
                @if (Model.Count() > 0)
                {
                    @foreach (var role in Model)
                    {
                        <tbody>
                            <tr>
                                <td>@role.Id</td>
                                <td>@role.Name</td>
                                <td style="width:200px">
                                    <a asp-controller="admin"
                                       asp-action="editUserRoles"
                                       asp-route-roleId="@role.Id"
                                       class="btn btn-primary btn-sm">Edit User Roles</a>
                                    <form action="/admin/role/delete" method="post" style="display:inline;">
                                        <input type="hidden" name="RoleId" value="@role.Id" />
                                       
                                    </form>
                                </td>
                            </tr>
                        </tbody>
                    }
                }
                else
                {
                    <h3 class="text-danger">No Role found.</h3>
                }

            </table>


        </div>
    </div>
</div>